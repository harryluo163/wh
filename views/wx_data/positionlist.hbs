<script language="javascript">
    $(function(){
        //判断显示类型
        var displaytype = "mt4";
        if(displaytype == 'mt4'){
            $("#actmt4").addClass("active");
            $("#actey").removeClass("active");
            $("#tab-product-mt4").addClass("active");
            $("#tab-order-open-option").removeClass("active");
            $("#type").attr("value",'mt4');
        }else{
            $("#actey").addClass("active");
            $("#actmt4").removeClass("active");
            $("#tab-order-open-option").addClass("active");
            $("#tab-product-mt4").removeClass("active");
        }

        $("#tabMt4").click(function(){
            $("#type").attr("value",'mt4');
        });
        $("#tabEy").click(function(){
            $("#type").attr("value",'ey');
        });

        $(window).scroll(function(){
            var scrollTop = $(document).scrollTop();
            var type = $("#type").attr("value");
            if(scrollTop >= $(document).height()-$(window).height()){
                if(type == 'mt4')
                {
                    var page = parseInt($("#mt4pageid").attr("value"));
                }
                else
                {
                    var page = parseInt($("#eypageid").attr("value"));
                }
                var url = '/order/index_contr/ajax_hand.shtml?type='+type+'&page='+page;
                $.ajax({
                    type: "get",
                    url: url,
                    beforeSend: function(XMLHttpRequest){
                        if(type == 'mt4') {
                            $("#loading1").css("display", "block");
                            $("#loadingTips1").css("display", "none");
                        }else{
                            $("#loading2").css("display", "block");
                            $("#loadingTips2").css("display", "none");
                        }
                    },
                    success: function(msg, textStatus){
                        if(type == 'mt4')
                        {
                            $("#mt4pageid").attr("value",page+1);
                            $("#loading1").css("display","none");
                            $("#loadingTips1").css("display","block");
                            if(msg == ''){
                                $("#loadingTips1").text('已无更多信息');
                            }
                            $("#mt4container").append(msg);
                        }
                        else
                        {
                            $("#eypageid").attr("value",page+1);
                            $("#loading2").css("display","none");
                            $("#loadingTips2").css("display","block");
                            if(msg == ''){
                                $("#loadingTips2").text('已无更多信息');
                            }
                            $("#eycontainer").append(msg);
                        }
                    }
                });
            }
        });
    });
    function showDetail(orderNo)
    {
        window.location='/order/hand/detail/'+orderNo+'.shtml';
    }
    function getData(){
        var type = $("#type").attr("value");
        if(type == 'mt4')
        {
            var page = parseInt($("#mt4pageid").attr("value"));
        }
        else
        {
            var page = parseInt($("#eypageid").attr("value"));
        }
        var url = '/order/index_contr/ajax_hand.shtml?type='+type+'&page='+page+'&mark=1';
        $.ajax({
            type: "get",
            url: url,
            beforeSend: function(XMLHttpRequest){
            },
            success: function(msg, textStatus){

                if(type == 'mt4')
                {
                    $("#mt4container").html(msg);
                }
                else
                {
                    $("#eycontainer").html(msg);
                }
            }
        });
    }
    setInterval("getData()",1000);
</script>

